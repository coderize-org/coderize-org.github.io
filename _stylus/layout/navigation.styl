$text-color = white

.navigation
  position: fixed
  top: 0

  width: 100%
  background-color: #5bd4bb

  z-index: 2

  transition: background-color 200ms, box-shadow 200ms
  transition-timing-function: ease

  // Navigation bar changes color on scroll
  &--has-shadow
    background-color: #232d39
    box-shadow: 0 2px 5px rgba(0,0,0,0.16), 0 2px 5px rgba(0,0,0,0.23)

  @media screen and (max-width: 575px)
    height: 100%

    background: #5db5a3

    overflow-x: hidden
    overflow-y: hidden

    transform: translateY(-100%)
  // transition: all .2s ease

  &.navigation--open
    @media screen and (max-width: 575px)
      transform: translateY(0)

  &__list
    display: flex
    align-items: center
    justify-content: center

    width: 100%
    height: 100%

    margin: 0
    padding: 0 1rem 0 2rem

    @media screen and (max-width: 575px)
      flex-direction: column
      text-align: center

      padding: 0
      width: 100%

  &__element
    display: inline-block
    color: $text-color

    border-top-width: 4px
    border-top-style: solid
    border-top-color: transparent

    &:hover
      border-top-color: white

    // Logo takes full available space, so navigation elements are aligned to
    // the right on desktop
    &:first-of-type
      flex: 1
      border-top-color: transparent !important

    @media screen and (max-width: 575px)
      display: block

      border-style: none
      // Hide logo on mobile navigation
      &:first-of-type
        display: none

  &__link
    display: inline-block

    color: inherit

    padding: 1rem 1.611rem

    font-size: 1.4rem

    @media screen and (max-width: 575px)
      font-size: 3rem


  // Toggles menu on mobile devices (hamburger)
  &__toggle
    display: none
    position: fixed
    right: 0
    top: 0

    margin: 1.5rem 1.5rem 0 0
    padding: 1.5rem 1.5rem 1rem
    cursor: pointer

    background-color: #5bd4bb
    border-radius: 30px

    z-index: 2

    @media screen and (max-width: 575px)
      display: block

    & > div
      height: 30px
      width: 30px

      & > div
        width: 100%

        height: 3px
        padding: 0
        margin: 6px 0 4px

        background-color: white
        transition: all .2s ease

    &.navigation--open
      & div >
        div:nth-of-type(1)
          transform: translateY(8px) rotate(45deg)

        div:nth-of-type(2)
          opacity: 0

        div:nth-of-type(3)
          transform: translateY(-10px) rotate(-45deg)
