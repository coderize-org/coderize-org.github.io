.button
  display: inline-block
  color: #f1f1f2
  text-align: center
  text-decoration: none

  padding: .5rem .75rem
  margin: .5rem .25rem

  border-radius: 4px
  border-width: 2px
  border-style: solid
  border-color: #f1f1f2
  background: transparent

  width: auto
  max-width: 200px

  appearance: none
  overflow: hidden
  cursor: pointer

  &--submit
    float: right
    clear: both
    width: 100%

    margin: 1rem 0
